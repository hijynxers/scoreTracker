<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AlertDialogTheme_FiveCrowns">

    <TextView
        android:id="@+id/calcScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/colorAccent"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_sub_3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calcScore_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/colorAccent"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/calcScore"
        app:layout_constraintEnd_toStartOf="@+id/calcScore"
        app:layout_constraintTop_toTopOf="@+id/calcScore" />

    <Button
        android:id="@+id/btn_calc_sub_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="1"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/calcTextSize"
        app:layout_constraintEnd_toStartOf="@+id/btn_calc_sub_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calc_sub_sub" />

    <Button
        android:id="@+id/btn_calc_sub_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="-"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/calcTextSize"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_sub_3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcScore" />

    <Button
        android:id="@+id/btn_calc_sub_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="2"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/calcTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_sub_1"
        app:layout_constraintEnd_toStartOf="@+id/btn_calc_sub_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_calc_sub_1"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_sub_1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_calc_sub_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/calcTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_sub_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_calc_sub_2"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_sub_2" />

    <Button
        android:id="@+id/btn_calc_sub_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="4"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/calcTextSize"
        app:layout_constraintEnd_toStartOf="@+id/btn_calc_sub_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calc_sub_1" />

    <Button
        android:id="@+id/btn_calc_sub_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="5"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/calcTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_sub_4"
        app:layout_constraintEnd_toStartOf="@+id/btn_calc_sub_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_calc_sub_4"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_sub_4" />

    <Button
        android:id="@+id/btn_calc_sub_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/calcTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_sub_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_calc_sub_5"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_sub_5" />

    <Button
        android:id="@+id/btn_calc_sub_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/calcTextSize"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_calc_sub_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calc_sub_4" />

    <Button
        android:id="@+id/btn_calc_sub_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/calcTextSize"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_sub_8"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_calc_sub_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_calc_sub_8" />

    <Button
        android:id="@+id/btn_calc_sub_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/calcTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_sub_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_calc_sub_8"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_sub_8" />

    <Button
        android:id="@+id/btn_calc_sub_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textColor="@color/colorAccent"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/calcTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_sub_7"
        app:layout_constraintEnd_toStartOf="@+id/btn_calc_sub_9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_calc_sub_7"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_sub_7" />

</androidx.constraintlayout.widget.ConstraintLayout>