<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/fiveCrownsTitleFragment">

    <fragment
        android:id="@+id/gameOverFragment"
        android:name="com.grapevineindustries.scoretracker.fragments.GameOverFragment"
        android:label="GameOverFragment" >
        <argument
            android:name="playerList"
            app:argType="com.grapevineindustries.scoretracker.models.Players" />
        <argument
            android:name="gameType"
            app:argType="string" />
        <action
            android:id="@+id/action_gameOverFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addPlayersFragment"
        android:name="com.grapevineindustries.scoretracker.fragments.AddPlayersFragment"
        android:label=""
        tools:layout="@layout/fragment_add_players" >
        <action
            android:id="@+id/action_addPlayersFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <argument
            android:name="numPlayers"
            app:argType="integer" />
        <argument
            android:name="gameType"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.grapevineindustries.scoretracker.fragments.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_gameOverFragment"
            app:destination="@id/gameOverFragment" />
        <argument
            android:name="playerList"
            app:argType="com.grapevineindustries.scoretracker.models.Players" />
        <argument
            android:name="gameType"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/fiveCrownsTitleFragment"
        android:name="com.grapevineindustries.scoretracker.fragments.FiveCrownsTitleFragment"
        android:label="Five Crowns"
        tools:layout="@layout/fragment_title_page" />
    <fragment
        android:id="@+id/rummyTitleFragment"
        android:name="com.grapevineindustries.scoretracker.fragments.RummyTitleFragment"
        android:label="Rummy"
        tools:layout="@layout/fragment_title_page" />
</navigation>