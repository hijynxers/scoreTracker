<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/gameOverFragment"
        android:name="com.grapevineindustries.scoretracker.fragments.GameOverFragment"
        android:label="GameOverFragment" >
        <argument
            android:name="playerList"
            app:argType="com.grapevineindustries.scoretracker.Players" />
        <action
            android:id="@+id/action_gameOverFragment_to_addPlayersFragment"
            app:destination="@id/addPlayersFragment"
            app:popUpTo="@id/addPlayersFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPlayersFragment"
        android:name="com.grapevineindustries.scoretracker.fragments.AddPlayersFragment"
        android:label="fragment_add_players"
        tools:layout="@layout/fragment_add_players" >
        <action
            android:id="@+id/action_addPlayersFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <argument
            android:name="numPlayers"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.grapevineindustries.scoretracker.fragments.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_gameOverFragment"
            app:destination="@id/gameOverFragment" />
        <argument
            android:name="playerList"
            app:argType="com.grapevineindustries.scoretracker.Players" />
    </fragment>
    <fragment
        android:id="@+id/titleFragment"
        android:name="com.grapevineindustries.scoretracker.fragments.TitleFragment"
        android:label="fragment_title"
        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_titleFragment_to_addPlayersFragment"
            app:destination="@id/addPlayersFragment" />
    </fragment>
</navigation>